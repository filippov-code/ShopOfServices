                    </a>
                    @*<div class="col border border-dark">
                        <a asp-controller="Admin" asp-action="Contacts">Контакты</a>
                    </div>
                    <div class="col border border-dark">
                        <a asp-controller="Admin" asp-action="About">О нас</a>
                    </div>*@
                    <a class="col admin-nav-btn-bg-exit rounded-2 py-3 px-2 text-decoration-none text-white mx-1" asp-controller="Admin" asp-action="@nameof(AdminController.Logout)">
                        Выход
                    </a>
                </div>
            </div>
        </header>

        @RenderBody()

        <footer>

        </footer>
